{
  "name": "opencode-claude-code-provider",
  "version": "1.0.0",
  "description": "OpenCode plugin for Claude Max subscription via Claude Agent SDK",
  "type": "module",
  "main": "./index.ts",
  "bin": {
    "claude-proxy": "./bin/claude-proxy.ts"
  },
  "exports": {
    ".": "./index.ts",
    "./provider": "./provider.ts",
    "./proxy": "./src/proxy/server.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "proxy": "bun run ./bin/claude-proxy.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.0",
    "@types/glob": "^8.1.0",
    "glob": "^13.0.0",
    "hono": "^4.11.4",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "@ai-sdk/provider": ">=2.0.0",
    "opencode-ai": ">=0.14.4"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.27",
    "@types/bun": "^1.2.21",
    "@types/node": "^22.0.0",
    "typescript": "^5.8.2"
  },
  "files": [
    "index.ts",
    "provider.ts",
    "src/",
    "README.md"
  ],
  "keywords": [
    "opencode",
    "claude",
    "anthropic",
    "claude-max",
    "ai-coding",
    "plugin",
    "claude-agent-sdk"
  ],
  "license": "MIT",
  "private": false
}
