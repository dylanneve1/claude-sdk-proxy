{
  "name": "claude-proxy",
  "version": "2.2.0",
  "description": "Anthropic Messages API proxy backed by Claude Agent SDK â€” use Claude Max with any API client",
  "type": "module",
  "main": "./src/proxy/server.ts",
  "bin": {
    "claude-proxy": "./bin/claude-proxy.ts"
  },
  "exports": {
    ".": "./src/proxy/server.ts"
  },
  "scripts": {
    "start": "bun run ./bin/claude-proxy.ts",
    "proxy": "bun run ./bin/claude-proxy.ts",
    "test": "bun test tests/helpers.test.ts tests/api.test.ts tests/openai-compat.test.ts",
    "test:integration": "INTEGRATION=1 bun test tests/integration.test.ts tests/openai-compat.test.ts",
    "test:all": "bun test tests/helpers.test.ts tests/api.test.ts tests/openai-compat.test.ts && INTEGRATION=1 bun test tests/integration.test.ts tests/openai-compat.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.25",
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^22.0.0",
    "typescript": "^5.8.2"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "claude",
    "claude-max",
    "claude-code",
